{% extends 'base.html.twig' %}

{% block body %}

<h1>Championship Dashboard</h1>

<a href="/admin/dashboard/championship/create">Create</a>

<table>
<tbody>
    {% for championship in championships %}
        <tr>
            <td>{{ championship.name }}</td>
            <td><a href="/admin/dashboard/championship/update/{{ championship.id }}">Update</a></td>
            <td>
                <form action="{{ path('delete_championship', {'idChampionship': championship.id}) }}" method="post" style="display:inline;">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ championship.id) }}">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this championship?');">Delete</button>
                </form>
            </td>
        </tr>
    {% endfor %}
</tbody>
</table>

{% endblock %}